<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".examples.RealLifeActivity">

    <Button
            android:id="@+id/load_smth_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load something"
    />

    <EditText
            android:id="@+id/some_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type smth"
    />

    <Button
            android:id="@+id/some_dialog_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show some dialog"
    />

    <Button
            android:id="@+id/call_from_java_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call from java :)"
    />

</LinearLayout>